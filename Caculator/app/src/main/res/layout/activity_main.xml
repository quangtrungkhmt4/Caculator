                    android:id="@+id/btnDongNgoac"
                    android:backgroundTint="#9e9e9e"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text=")"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn7"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn4"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn1"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn00"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"></LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnMu"
                    android:backgroundTint="#9e9e9e"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="^"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn8"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="8"
