                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnPhay"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"></LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnCan"
                    android:backgroundTint="#9e9e9e"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="@string/square_root_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn9"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn6"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btn3"
                    android:backgroundTint="#535353"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnBang"
                    android:backgroundTint="#9e9e9e"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnChia"
                    android:backgroundTint="#9e9e9e"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnNhan"
                    android:backgroundTint="#9e9e9e"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnTru"
                    android:backgroundTint="#9e9e9e"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnCong"
                    android:backgroundTint="#9e9e9e"
                    android:textColor="#ffffff"
                    android:layout_gravity="bottom"
                    style="?android:attr/textAppearanceLarge"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>